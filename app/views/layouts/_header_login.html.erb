<div class="user-login" data-turbo="false">
  <% user = User.new %>
  <%= form_with model: user, url: session_path(user), class: 'header-login-form' do |f| %>
    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, autocomplete: "username", maxlength: 40 %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "password" %>
    </div>

    <div class="field remember-me">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>

    <div>
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>
