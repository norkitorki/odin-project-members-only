<div class="post">
  <%= link_to post.title, post, class: 'post-title' %>

  <div class="post-misc">
    <p class="post-details">
      <span class="post-rating"><%= post.rating.abs >= 1000 ? "#{(post.rating / 1000.0).round(1).to_s.sub('.0', '')}k" : post.rating %></span>
      â€¢  <span><%= distance_of_time_in_words(post.created_at.to_i, Time.now.to_i) %> ago </span>
      <% if user_signed_in? %>
        <% if controller_name != 'users' %>
          <span>by </span>
          <%= link_to post.user.username, user_posts_path(post.user.username), class: 'post-author' %>
        <% end %>
      <% end %>
    </p>

    <div class="post-links">
      <%= button_to 'Show', post, method: :get %>
      <% if current_user && current_user.id == post.user.id %>
        <%= button_to 'Edit', edit_post_path(post), method: :get %>
        <%= button_to 'Delete', post_path(post), method: :delete, data: { turbo_confirm: 'Are you sure you would like to delete this post?' } %>
      <% end %>
    </div>
  </div>
</div>
